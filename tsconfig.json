{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true
  },
  "include": ["*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
